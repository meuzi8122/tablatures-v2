---
import type { Tablature } from "../../../clients/model";
import InformationIcon from "../../icon/information-icon.astro";
import ListImage from "../list-image.astro";

type Props = {
    tablature: Tablature;
};

const { tablature } = Astro.props;
---

<li class="list-row">
    <div>
        <ListImage alt="artwork" src={tablature.artworkUrl} />
    </div>
    <div>
        <div>{`${tablature.title} (${tablature.instrument})`}</div>
        <a
            class="link link-hover text-xs font-semibold opacity-60"
            href={`/tablatures/${tablature.artist.id}`}
            class="text-xs font-semibold opacity-60">{`${tablature.artist.name}`}</a
        >
    </div>
    <a href={`/tablatures/${tablature.id}`} class="btn btn-square btn-ghost">
        <InformationIcon />
    </a>
</li>
