---
import type { Tablature } from "../../../clients/model";
import InformationIcon from "../../icon/information-icon.astro";
import ListImage from "../list-image.astro";

type Props = {
    tablature: Tablature;
};

const { tablature } = Astro.props;
---

<li class="list-row">
    <div>
        <ListImage alt="artwork" src={tablature.artworkUrl} />
    </div>
    <div>
        <div>{`${tablature.title}`}</div>
        <div class="text-xs font-semibold opacity-60">
            <a class="link link-hover" href={`/artists/${tablature.artist.id}`}>{tablature.artist.name}</a>
            / {tablature.instrument}
        </div>
    </div>
    <div>
        <a href={`/tablatures/${tablature.id}`} class="btn btn-square btn-ghost">
            <InformationIcon />
        </a>
    </div>
</li>
