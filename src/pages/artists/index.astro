---
import { ArtistClient } from "../../clients/artist";
import Layout from "../../layouts/layout.astro";

const artists = await ArtistClient.getALLArtists();
---

<Layout>
    <div class="container mx-auto mt-5">
        <h1 class="text-xl text-center">掲載アーティスト一覧</h1>
        <div class="mt-7 grid grid-cols-4 gap-3">
            {
                artists.map((artist) => (
                    <a href={`/artists/${artist.id}`} class="link">
                        {artist.name}
                    </a>
                ))
            }
        </div>
    </div>
</Layout>
